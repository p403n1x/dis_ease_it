<div class="banner banner-home">
  <div class="container">
    <h1>Sick of being well? Rent a sickness!</h1>
    <%= link_to diseases_path do %>
      <div class="btn btn-flat">See all our diseases</div>
    <% end %>
  </div>
</div>

<div class="container text-center mt-3">


  <br>

  <h3>Trending</h3>

  <br>

  <div class="cards">
    <% @selection.each do |s| %>
      <%= link_to disease_path(s) do %>
      <div class="row">
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card-disease align-content">
            <%= cl_image_tag s.image.key, height: 300, width: 400, crop: :fill %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<!%= cl_image_path @disease.image.key, height: 300, width: 400, crop: :fill %>')">
            <div class="card-disease-infos">
              <h2><%= s.name %></h2>
              <p><%= s.description %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>





