

    <div class="container pt-5">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
          <div class="row justify-content-center">
            <% chosen_disease = @disease.name  %>
            <h4>Sure you want <%=chosen_disease   %>?</h4>
              <div class="card-disease my-3">
                <%= cl_image_tag @disease.image.key, height: 300, width: 400, crop: :fill %>
